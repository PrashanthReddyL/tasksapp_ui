{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": "off",
    "linebreak-style": ["warn", "unix"],
    "quotes": "off",
    "semi": ["warn", "always"],
    "no-unused-vars": "off",
    "react/prop-types": "warn" // Keeping prop-types rule as warning
  }
}
